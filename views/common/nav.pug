script.
  var loggedin = #{loggedin}
  console.log(loggedin)
  var name = "#{name}"

if loggedin
  //- script(src="/javascripts/loginNav.js")

#navbar
  #spanLogoContainer.container
    #spanLogo.row
      .col-md-3#navContainer
        .nav-div
          img.nav-logo(src='/images/hero/nav-white.png' alt='LOGO' onclick='openNav()' onmousedown = "mouseDown()" onmouseup = "mouseUp()")     
      .col-md-9#logoDiv
        a#logoLink(href='/')
          img.logo-image(src='/images/logos/TIPS-logo6/cover.png' alt='LOGO')
      
  #navbar-right(style = "height: 52px !important;")
    a.navOption#hide3(href='/') Home
    a.navOption#hide(href='/about') About
    a.navOption#hide5(href='/blog') Blog
    a.navOption#hide4(href='/wiki') Wiki
    a.navOption#hide1(href='/contact') Contact
    if loggedin
      .dropdown
        a.dropbtn.navOption#hide2(href='/profile') Hi&nbsp; #{name}
        .dropdown-content
          #googleImageContainer
            img#googleImage(src = image)
          a(href='/profile')#dropdownFirstElement profile
          a(href='/logout') Logout
          a(href='/dashbaord') Blog Posts
    else
      a.navOption#hide2(href='/login') Login


