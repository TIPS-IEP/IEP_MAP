doctype html
html(lang='en')
  body
    h1 Login
    form(action = "/login" method = "POST")
        div
            label(for = "email") Email
            input(type = "text" id = "email" name = "email" required)
        div
            label(for = "password") Password
            input(type = "password" id = "password" name = "password" required)
        button(type="submit") login