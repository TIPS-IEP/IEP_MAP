    script(src="javascripts/blog/blog.js")
    //- center website 
    meta(name='viewport' content='width=device-width, initial-scale=1')

    //- google font set up
    link(rel="preconnect" href="https://fonts.gstatic.com")
    link(href="https://fonts.googleapis.com/css2?family=Lato:wght@300&display=swap" rel="stylesheet")

    title Blog Posts
    //favicon
    link(rel="icon" type="image/png" href="/images/icons/favicon.png")

  body#main
    include ../common/nav
    include ../common/cover
    #mySidenav.sidenav
      a.closebtn(href='javascript:void(0)' onclick='closeNav()') &times;
      a.pcsidenav(href='#') Home 
      a.pcsidenav(href='#vision') Vision
      a.pcsidenav(href='#mission') Mission
      a.pcsidenav(href='#about') Features
      a.pcsidenav(href='#contactus') Contact
      include ../common/mbsidenav
    #mySidenav.sidenav
        include ../common/mbsidenav
    #overlay
    .container#title
      .row
        .col-md-1
        .col-md-10
          h1 BLOG POSTS
          p Mainly composed of alumni and a small number of student representatives, the advisory board meet regularly every six months and changes Board Members every two years. The selection of Board members will be discerned by year, region, or industry.
        .col-md-1
      .container
        .row.blogOptions(style = "height: 100px")
          .col-md-2
          .col-md-8.blogTypes
            .BLink(onclick = "showBlogType(0)") #college
            .BLink(onclick = "showBlogType(1)") #advice
            .BLink(onclick = "showBlogType(2)") #applying
            .BLink(onclick = "showBlogType(3)") #activities
          .col-md-2
        .row.typeB.fadeInUpward
          for collegeBlog in collegeBlogs
            .col-md-4.blogDiv(id=collegeBlog._id)
              .card
                img.card-img-top(src="/images/blog/cover1.jpg" alt="Card image cap")
                .card-body
                  h5.card-title #{collegeBlog.blogTitle}
                  p.card-text Some quick example text to build on the card title and make up the bulk of the card's content.
                  a.btn.btn-primary(href='/blog/' + collegeBlog._id+ '/view') Read More
        .row.typeB.displayN.fadeInUpward
          for adviceBlog in adviceBlogs
            .col-md-4.blogDiv(id=adviceBlog._id)
              .card
                img.card-img-top(src="/images/blog/cover1.jpg" alt="Card image cap")
                .card-body
                  h5.card-title #{adviceBlog.blogTitle}
                  p.card-text Some quick example text to build on the card title and make up the bulk of the card's content.
                  a.btn.btn-primary(href='/blog/' + adviceBlog._id+ '/view') Read More
        .row.typeB.displayN.applyingBlogs
          for applyingBlog in applyingBlogs
            .col-md-4.blogDiv(id=applyingBlog._id)
              .card
                img.card-img-top(src="/images/blog/cover1.jpg" alt="Card image cap")
                .card-body
                  h5.card-title #{applyingBlog.blogTitle}
                  p.card-text Some quick example text to build on the card title and make up the bulk of the card's content.
                  a.btn.btn-primary(href='/blog/' + applyingBlog._id+ '/view') Read More
        .row.typeB.displayN.fadeInUpward
          for activitiesBlog in activitiesBlogs
            .col-md-4.blogDiv(id=activitiesBlog._id)
              .card
                img.card-img-top(src="/images/blog/cover1.jpg" alt="Card image cap")
                .card-body
                  h5.card-title #{activitiesBlog.blogTitle}
                  p.card-text Some quick example text to build on the card title and make up the bulk of the card's content.
                  a.btn.btn-primary(href='/blog/' + activitiesBlog._id+ '/view') Read More
    .container(style="margin-top: 10rem")
      .row 
        .col-md-4
        .col-md-4
          a(href="/writeblog")
            button#startBlog.btn(type="button") Start Writing Your Own Blog
        .col-md-4 

  include ../common/footer 
  
  script(src="javascripts/fadeIn.js")
  
